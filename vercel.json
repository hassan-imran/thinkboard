{
  "version": 2,
  "builds": [
    {
      "src": "api/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "buildCommand": "npm install --prefix api && npm install --prefix client && npm run build --prefix client"
}